<div class="cp_media">

	{% if elements['CP_MEDIA']['PICTURE'] %}
		<div class="picture">
			<img src="{{ elements['CP_MEDIA']['ELEMENT'].getPictureUri() }}" alt="{{ elements['CP_MEDIA']['ELEMENT'].getPictureName() }}" title="{{ element[0].getPictureName() }}" />
		</div>	
	{% endif %}	
	
	
	{% if elements['CP_MEDIA']['VIDEO'] %}
		<div class="video">
			<video src="{{ elements['CP_MEDIA']['ELEMENT'].getVideoUri() }}" controls>
				Sorry, Your browser doesn't support the video format.
				<br /><a href="{{ elements['CP_MEDIA']['ELEMENT'].getVideoUri() }}">However, you can download the videofile instead.</a> 
			</video>
		</div>
	{% endif %}	
	
	
	{% if elements['CP_MEDIA']['AUDIO'] %}
		<div class="audio">
			<audio src="{{ elements['CP_MEDIA']['ELEMENT'].getAudioUri() }}" controls>
				Sorry, Your browser doesn't support the audio format.
				<br /><a href="{{ elements['CP_MEDIA']['ELEMENT'].getVideoUri() }}">However, you can download the audiofile instead.</a> 
			</audio>
		</div>	
	{% endif %}	

</div>	