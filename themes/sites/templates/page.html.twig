
<div id="page-wrapper">
  <div id="page">
    <header class="header" role="banner" aria-label="{{ 'Site header'|t}}">
      <div class="header-section section layout-container clearfix">
        {{ page.header }}
      </div>
    </header>

    {{ page.primary_menu }}

    {% if page.highlighted %}
      <div class="highlighted">
        <aside class="layout-container section clearfix" role="complementary">
          {{ page.highlighted }}
        </aside>
      </div>
    {% endif %}

    <div id="main-wrapper" class="layout-main-wrapper layout-container clearfix">
      <div id="main" class="layout-main clearfix">
        {{ page.breadcrumb }}
        <main id="content" class="column main-content" role="main">
          <section class="section">
            <a id="main-content" tabindex="-1"></a>
            {{ page.content }}

            {% if page.content_left or page.content_right %}
            <div class="row">
              {% if page.content_left %}
              <div class="col-md-6">
              {{ page.content_left }}
              </div>
              {% endif %}
              {% if page.content_right %}
              <div class="col-md-6">
              {{ page.content_right }}
              </div>
              {% endif %}
            </div>
            {% endif %}

            {% if page.content_bottom %}
            <div class="row">
              <div class="col-md-12">
                {{ page.content_bottom }}
              </div>
            </div>
            {% endif %}

          </section>
        </main>

        {% if page.sidebar_second %}
          <div id="sidebar-second" class="column sidebar">
            <aside class="section" role="complementary">
              {{ page.sidebar_second }}
            </aside>
          </div>
        {% endif %}
      </div>
    </div>

    {% if page.featured_bottom_first or page.featured_bottom_second or page.featured_bottom_third %}
      <div class="featured-bottom">
        <aside class="layout-container clearfix" role="complementary">
          {{ page.featured_bottom_first }}
          {{ page.featured_bottom_second }}
          {{ page.featured_bottom_third }}
        </aside>
      </div>
    {% endif %}

    {% if page.footer_first or page.footer_second or page.footer_third %}
      <footer class="site-footer" role="contentinfo">
        <div class="layout-container p-3 d-flex justify-content-between">
          {{ page.footer_first }}
          {{ page.footer_second }}
          {{ page.footer_third }}
        </div>
      </footer>
    {% endif %}
  </div>
</div>
